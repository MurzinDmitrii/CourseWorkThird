<Page x:Class="Курсач.Pages.CardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсач.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="CardPage">

    <Grid>
        <Viewbox>
            <StackPanel Orientation="Vertical" Margin="50">
                <ComboBox materialDesign:HintAssist.Hint="Диагноз" Width="200" Margin="10"
                                  materialDesign:HintAssist.HintOpacity=".26" x:Name="DesiaseBox"
                                  IsEditable="True" DisplayMemberPath="Position" 
                                  SelectedItem="{Binding DesiaseName}"/>
                <DatePicker Margin="5"  x:Name="DateEndBox" SelectedDate="{Binding CardDateEnd}"
                            materialDesign:HintAssist.Hint="Конец наблюдения" Language="ru-RU" Width="200"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                <Button x:Name="SaveButton" Click="SaveButton_Click" Width="150" 
                                Content="Сохранить" Margin="10" Cursor="Hand"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
